<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.byteshaft.contactsharing.RegisterActivity">

    <ScrollView
        android:overScrollMode="always"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:drawablePadding="9dp"
            android:drawableLeft="@mipmap/username"
            android:drawableStart="@mipmap/username"
            android:hint="Full name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:drawableLeft="@mipmap/email"
            android:drawableStart="@mipmap/email"
            android:drawablePadding="9dp"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:singleLine="true"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:drawablePadding="9dp"
            android:drawableStart="@mipmap/password"
            android:drawableLeft="@mipmap/password"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            style="@style/AppTheme.Button"
            android:layout_marginBottom="30dp"
            android:text="Register"
            android:textColor="@color/white"
            android:padding="15dp"
            android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

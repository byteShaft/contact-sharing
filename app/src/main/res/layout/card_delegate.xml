<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/hidden_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <com.byteshaft.contactsharing.utils.SquareImageView
            android:id="@+id/square_image_view"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:background="@color/tale_light"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hidden_id"
            android:layout_toEndOf="@+id/hidden_id">

        </com.byteshaft.contactsharing.utils.SquareImageView>


        <TextView
            android:id="@+id/card_owner_name"
            android:text="sample"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/square_image_view"
            android:layout_toRightOf="@+id/square_image_view"
            android:layout_toEndOf="@+id/square_image_view" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_card"/>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout" >

        <ImageView
            android:id="@+id/card_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:background="@drawable/border_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.github.siyamed.shapeimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:siBorderWidth="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            app:siBorderColor="@color/colorAccent"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/card_one_text_color"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/image_view"
            android:layout_toEndOf="@+id/image_view"
            android:textSize="40sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Shahid Ghafoor" />

        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textColor="@color/card_one_text_color"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/image_view"
            android:layout_below="@+id/tv_name"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">


            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="+923006860746"
                android:textSize="20sp"
                android:textColor="@color/card_one_text_color" />

            <TextView
                android:id="@+id/email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="shahidghafoor@gmail.com"
                android:textSize="20sp"
                android:textColor="@color/card_one_text_color"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Khan center, Abdali Road, Multan"
                android:textSize="20sp"
                android:textColor="@color/card_one_text_color"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/card_one_text_color"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />

        <TextView
            android:id="@+id/tv_jobzy_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jobzy ID"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/card_one_text_color"
            android:layout_below="@+id/tv_organization"
            android:layout_alignRight="@+id/tv_organization"
            android:layout_alignEnd="@+id/tv_organization" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
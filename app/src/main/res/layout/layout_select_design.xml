<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/design_one"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/background_one"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/design_two"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/design_one"
                android:layout_margin="5dp"
                android:src="@drawable/background_two" />


            <ImageView
                android:id="@+id/design_three"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/design_two"
                android:layout_margin="5dp"
                android:src="@drawable/background_three" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
